{
  "name": "rcl",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "postinstall": "husky install config/husky",
    "pkg": "manypkg run",
    "build": "yarn workspaces foreach -vpi run build",
    "prebuild:storybook": "rimraf docs-build",
    "build:storybook": "build-storybook -o docs-build -s .storybook/public",
    "dev": "start-storybook -p 6006 -s .storybook/public",
    "start": "yarn dev",
    "clean": "yarn workspaces foreach -vpi exec rimraf coverage dist node_modules",
    "clean-dist": "yarn workspaces foreach -vpi exec rimraf dist",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yaml,yml}' --ignore-path ./config/.prettierignore",
    "lint": "yarn workspaces foreach -vpi run lint",
    "test": "jest --env=jsdom --passWithNoTests",
    "test:ci": "jest --runInBand",
    "test:ci:cov": "yarn test:ci --coverage",
    "test:cov": "yarn test --coverage",
    "test:watch": "yarn test --watch -u",
    "gen:theme-typings": "chakra-cli tokens packages/theme",
    "changeset": "changeset",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "sort-package-json": "yarn workspaces foreach -vpi exec npx sort-package-json",
    "component:add": "ts-node tools/create-component"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --ext .js,.jsx,.ts,.tsx --ignore-path ./config/.eslintignore"
    ],
    "*.{css,scss,js,jsx,ts,tsx}": [
      "stylelint '**/*.{css,scss,js,jsx,ts,tsx}' --ignore-path ./config/.stylelintignore"
    ]
  },
  "browserslist": [
    "> 2% in DE",
    "last 3 versions",
    "Firefox ESR",
    "not dead"
  ],
  "prettier": "./config/.prettierrc.json",
  "eslintConfig": {
    "extends": "./config/.eslintrc.json"
  },
  "stylelint": {
    "extends": "./config/.stylelintrc.json"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@chakra-ui/cli": "^1.3.1",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@fontsource/lato": "^4.4.5",
    "@manypkg/cli": "^0.18.0",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^6.0.0",
    "import-sort": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "jest": "^27.0.4",
    "jest-environment-jsdom": "^27.0.3",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-jsdoc": "^0.3.23",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-property-sort-order-smacss": "^7.1.0",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "~4.2.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "module",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module",
      "options": {}
    }
  }
}
